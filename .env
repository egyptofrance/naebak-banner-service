# خدمة إدارة البنرات - إعدادات البيئة
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=flask-insecure-banners-service-key-change-in-production

# إعدادات الخدمة
SERVICE_NAME=naebak-banners-service
PORT=8009
SERVICE_VERSION=1.0.0

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///banners.db
DATABASE_NAME=naebak_banners
DATABASE_USER=naebak_user
DATABASE_PASSWORD=secure_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# إعدادات Redis للتخزين المؤقت
REDIS_URL=redis://localhost:6379/9
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=9

# إعدادات تخزين الملفات
UPLOAD_FOLDER=uploads/banners
MAX_CONTENT_LENGTH=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,svg

# إعدادات Google Cloud Storage
GCS_BUCKET_NAME=naebak-banners-storage
GCS_PROJECT_ID=naebak-472518
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# إعدادات البنرات
MAX_BANNER_SIZE_MB=5
MIN_BANNER_WIDTH=300
MAX_BANNER_WIDTH=1920
MIN_BANNER_HEIGHT=150
MAX_BANNER_HEIGHT=1080
IMAGE_OPTIMIZATION=true
AUTO_RESIZE=true
QUALITY_COMPRESSION=85

# إعدادات CDN
CDN_ENABLED=true
CDN_BASE_URL=https://cdn.naebak.com/banners/
CACHE_DURATION=3600

# إعدادات الجدولة
BANNER_SCHEDULING_ENABLED=true
AUTO_EXPIRE_BANNERS=true
DEFAULT_BANNER_DURATION_DAYS=30

# إعدادات الأمان
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MAX_BANNERS_PER_USER=10
REQUIRE_ADMIN_APPROVAL=true

# إعدادات التسجيل
LOG_LEVEL=INFO
LOG_FILE=banners_service.log

# إعدادات المراقبة
MONITORING_ENABLED=false
HEALTH_CHECK_INTERVAL=60
ANALYTICS_TRACKING=true
