# خدمة البانرات - مشروع نائبك
# Flask + SQLite Environment Variables

# ===========================================
# إعدادات التطبيق الأساسية
# ===========================================
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# ===========================================
# إعدادات قاعدة البيانات SQLite
# ===========================================
DATABASE_URL=sqlite:///naebak_banners.db

# ===========================================
# إعدادات Redis
# ===========================================
REDIS_URL=redis://localhost:6379/3

# ===========================================
# إعدادات رفع الملفات
# ===========================================
UPLOAD_FOLDER=uploads/banners
MAX_CONTENT_LENGTH=10485760
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# ===========================================
# إعدادات البانرات
# ===========================================
MAX_ACTIVE_BANNERS=5
DEFAULT_BANNER_DURATION_DAYS=7
AUTO_APPROVE_USER_BANNERS=false
ENABLE_BANNER_ANALYTICS=true
CACHE_DURATION_MINUTES=30
MAX_USER_BANNERS=1
REQUIRE_ADMIN_APPROVAL=true

# ===========================================
# إعدادات الصور
# ===========================================
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080
IMAGE_QUALITY=85

# ===========================================
# إعدادات الإشعارات
# ===========================================
ADMIN_EMAIL=admin@naebak.com
SEND_APPROVAL_NOTIFICATIONS=true
SEND_STATS_REPORTS=true

# ===========================================
# إعدادات CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# إعدادات Rate Limiting
# ===========================================
RATELIMIT_DEFAULT=100 per hour

# ===========================================
# إعدادات السجلات
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/banner_service.log

# ===========================================
# إعدادات المراقبة
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# إعدادات الأداء
# ===========================================
WORKERS=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
PRELOAD_APP=true
TIMEOUT=30
KEEPALIVE=5

# ===========================================
# إعدادات الأمان (للإنتاج)
# ===========================================
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
